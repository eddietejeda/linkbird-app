<!-- Render Tweets -->
<div class="card card-with-no-border">
   <div class="card-content">
      <div class="content">
         <div class="tweetbox has-text-centered">
           <h4 style="margin:0"><%= @screen_name %></h4>
         </div>
      </div>
   </div>
</div>  



<% if @current_user %>
  <div class="card card-with-no-border">
    <div class="card-content">
      <div class="content">
        <section class="has-text-centered">
          <input type="hidden" id="is-premium-user" >
                
            <!-- Public Profile -->
            <div class="columns">
              <div class="column is-5 is-offset-1 has-text-left">
                <p>
                 How often would you like to see the articles that <%= @screen_name %> posts? 
               </p>
              </div>
              <hr>
              <div class="column is-5 is-offset-1 ">
                <div class="buttons has-addons">
                  <button data-setting-name="priority" value="never"     class="toggle-settings-button button <%= "is-info is-selected" if @follow_options[:priority] == 'never' %>">Never</button>
                  <button data-setting-name="priority" value="sometimes"     class="toggle-settings-button button <%= "is-info is-selected" if @follow_options[:priority] == 'sometimes' %>">Sometimes</button>
                  <button data-setting-name="priority" value="frequent" class="toggle-settings-button button <%= "is-info is-selected" if @follow_options[:priority] == 'frequent' %>">Frequent</button>
                </div>
              </div>
            </div>
            
        </section>
        <br>
        <p>
          Not sure? Here's is their most recent Tweet to help you decide.
        </p>
        
      </div>
    </div>
  </div> 
<% end %>

<div class="column is-8 is-offset-2">
<%= erb(:tweets) %>
</div>
