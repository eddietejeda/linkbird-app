<%= erb(:_navigation) %>

<div class="card card-with-no-border">
  <div class="card-content">
    <div class="content">
        <section class="column has-text-left">
          <div class="column px-0">
            <div style="text-align:center">
            <!-- Not subscribed -->
            <% if @user.data['stripe_subscription_status'] != 'active' %>
              <div class="column has-text-left">
                <h4>What do I get with a subscription?</h4>
                <p><li>Archive up to 1000 articles in your timeline. </li></p>
                <!-- <p><li>Automatically updates every 10 minutes. </li></p> -->
                <p><li><b>Coming soon</b>: Bookmark your articles.</li></p>
                <!-- Can we limit number of refreshes?-->
              </div>              
            <% end %>
            
            
            <div class="column has-text-center">
              <% if @user.data['stripe_subscription_status'] == 'active' && @user.data["stripe_subscription_end_date"] > DateTime.now %>
                <p>Thank you for the support!</p>
                <p> <span class="tag is-info" style="font-size: 100%">Premium Subscription Active</span></p>

                <form action="/cancel" method="POST" id="cancel-subscription-form">
                  <p><small><a id="cancel-subscription-link" style="text-decoration: none" href="#">Cancel Subscription</a></small></p>
                  <p><small>(Renewal: <%= DateTime.parse( @user.data["stripe_subscription_end_date"] ).strftime("%B %d, %Y") %>  )</small></p>                    
                  <input type="submit" style="display:none">
                </form>
                <% elsif @user.data['stripe_subscription_status'] == 'inactive' && @user.data["stripe_subscription_end_date"] > Date.now %>
                  <p style="">Subscription has been canceled but will remain active until <%= DateTime.parse( @user.data["stripe_subscription_end_date"] ).strftime("%B %d, %Y") %> </p>
                <% else %>
                  <button id="activate-premium-plan-btn">Activate Subscription</button>
                <% end %>
              </div>
            </div>
            

        </section>
    </div>
  </div>
</div> 




