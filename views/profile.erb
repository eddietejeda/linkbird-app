<!-- Render Tweets -->
<div class="card card-with-no-border">
   <div class="card-content">
      <div class="content">
         <div class="tweetbox has-text-centered">
           <!-- <h3 style="margin:0">Settings</h3> -->
         </div>
      </div>
   </div>
</div>  

<div class="card card-with-no-border">
  <div class="card-content">
    <div class="content">
      <section class="has-text-centered">
        
        
        <div class="columns">
          <div class="column is-7 is-offset-1 has-text-left">
            <p>
              <strong>Public Profile?</strong>
              <br/>
              <p>When you unlock your account, your friends can see your newsfeed. <strong><a href="<%= @user_url %>">Preview here</a></strong></p> 
              
            </p>
          </div>
          
          <div class="column is-3 is-offset-1 is-px-0">
            <div class="buttons has-addons">
              <button value="true" class="unlock-button button  <%= "is-success is-selected" if @user_is_public == true %>">Yes</button>
              <button value="false"  class="unlock-button button <%= "is-selected is-danger" if @user_is_public == false %>">No</button>
            </div>
          </div>
        </div>
        
        
      </section>
    </div>
  </div>
</div> 