<!-- Title -->
<div class="card card-with-no-border">
   <div class="card-content">
      <div class="content">
         <div class="tweetbox has-text-centered">
           <h3 style="margin:0"></h3>
         </div>
      </div>
   </div>
</div>  

<!-- Public Tweets -->
<% if @public_page && @user_is_public %>
  <div class="card card-with-no-border">
     <div class="card-content">
        <div class="content">
           <div class="tweetbox has-text-centered">
             <h3>@<%= @user.screen_name %> Newsfeed</h3>
           </div>
        </div>
     </div>
  </div>  
<% elsif @user_is_public == false %>
  <div class="card card-with-no-border">
     <div class="card-content">
        <div class="content">
           <div class="tweetbox has-text-centered">
             <h3>Account does not exist <br>or is set to private</h3>
           </div>
        </div>
     </div>
  </div>    
<% end %>



<!-- List Tweets -->
<% if @tweets %>
  <% @tweets.each do |t| %>
    <div class="card card-with-border article">
       <div class="card-content" style="padding-bottom: 0.5rem">
          <div class="media">
               <div class="fav media-left px-4 is-inline-flex" >
                  <figure class="image is-48x48">
                    <% if t.tweet['favicon'].to_s.length > 0 %>
                      <img class="article-image" src="<%= preferred_fav_icon(t.tweet['favicon'].to_s) %>" data-backup="<%= t.tweet.to_h['images'].first.to_h['src'].to_s %>" />                     
                    <% end %>
                  </figure>
               </div>
           
             <div class="media-content px-2 " style="overflow: hidden;">
                <a href="<%= t.tweet['url'] %>">
                
                   <% if t.tweet['title'].to_s.length > 0 %>
                     <h4 class="title is-5 is-size-6-mobile	has-text-black has-text-left"><%= t.tweet['title'] %></h4>
                   <% else %>
                     <h4 class="title is-5 is-size-6-mobile	has-text-black has-text-left"><%= t.tweet['description'].to_s[0..20] %>...</h4>
                   <% end %>
                 
                   <p class="content has-text-black has-text-left tweet-content">
                      <%= t.tweet['description'] %>
                      <br>
                   </p>
                </a>
                              
                <div class="column is-6 px-0" style="padding-bottom: 0">
                  <div class="heading has-text-black is-5 px-0">
                     <div class="columns">
                        <div class="column has-text-left has-text-black is-12">
                          Shared By: <a href="https://twitter.com/<%= t.meta['screen_name'] %>"><%= t.meta["name"] %></a></div>
                        <div class="column has-text-right has-text-black is-11 mobile-align-left">
                          <a target="_new" href="https://twitter.com/<%= t.meta['screen_name'] %>/status/<%= t.tweet_id %>">
                            <span class=""><i class="fas fa-retweet"></i>&nbsp;<%= t.meta["retweet_count"] %>&nbsp;</span>
                            <span class=""><i class="fas fa-heart"></i>&nbsp;<%= t.meta["favorite_count"] %>&nbsp;</span>
                            <span class=""><%= format_datetime t.tweet_date, @user_timezone %>&nbsp;</span>
                          </a>
                        </div>
                      </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
  <% end %>
<% end %>





<!--Pagination -->
<% if @user.present? && (@user.data.to_h['premium'] == true || @tweets.count > (@page_limit-1)) %>
  <div class="card <%= @first_download ? 'card-with-no-border' : 'card-with-border' %>">
     <div class="card-content" >
        <div class="content">
           <% if @user.data['premium'] == true %>
             <%= pagy_bulma_nav(@pagy) if @pagy && @pagy.pages > 1 %>
           <% elsif !@first_download  %>
             <div class="tweetbox">
                <section class="container basic-photo">
                  <p>You are viewing <%= @tweets.count %> out of <%= @page_limit %> articles.<br>Subscribe to view up to 1000 articles</p>
                  <button id="activate-premium-plan-btn">Activate Subcription</button>
                  <br/>
                  <p><a href="/subscription">Learn more</a><br></p>
                </section>
             </div>
           <% end %>
        </div>
     </div>
  </div>
<% else %>



  <div class="card-with-no-border">
     <div class="card-content" >
        <div class="content">
        </div>
     </div>
  </div>  
<% end %>
