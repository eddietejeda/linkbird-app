<div id="premium-modal" class="modal">
  <div class="modal-background"></div>
  <div class="modal-content">
    <div class="box" style="margin: 0 6%">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <%= erb(:features) %>
            <%= erb(:checkout) %>
          </div>
        </div>
      </article>
    </div>
  </div>
  <button class="modal-close is-large" aria-label="close"></button>
</div>